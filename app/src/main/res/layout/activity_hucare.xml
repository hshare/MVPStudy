<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <hucare.avstudy.mmp.ui.view.HucareSwipeToRefreshLayout
        android:id="@+id/hucareSwipeToRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hucareHeaderView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="refresh1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hucareTargetView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/hucareFooterView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
            android:text="refresh2"
            android:textColor="#000"
            android:textSize="16sp" />
    </hucare.avstudy.mmp.ui.view.HucareSwipeToRefreshLayout>


</LinearLayout>
